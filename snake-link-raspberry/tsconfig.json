{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "types": ["node"],
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "ts-node": {
        "esm": true
    },
    "include": ["src/**/*.ts"]
}
