# Port for the HTTP server
PORT=3000
# Use mock data instead of real data
# Set to true for development/testing purposes
# Set to false for production
USE_MOCK=true
# Base directory for data storage
DATA_DIR=./data
# Commaâ€‘separated list of allowed CORS origins, or "*" for any
CORS_ORIGINS=*
# JWT secret for signing tokens
JWT_SECRET=your_jwt_secret_here
# Pepper for hashing passwords
PEPPER=your_pepper_here
# Telegram bot token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Set to true to disable the Telegram bot notifications temporarily
# This is useful for testing purposes when you don't want to receive notifications
DISABLE_TELEGRAM_BOT=true
# Home Assistant configuration
HOME_ASSISTANT_URL=http://localhost:8123
HOME_ASSISTANT_TOKEN=<your_home_assistant_token_here>